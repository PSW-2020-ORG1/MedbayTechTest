FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /app

COPY Backend/Backend.csproj Backend/
COPY WebApplication/WebApplication.csproj WebApplication/
COPY IntegrationTests/IntegrationTests.csproj IntegrationTests/
COPY PharmacyIntegration/PharmacyIntegration.csproj PharmacyIntegration/

RUN dotnet restore PharmacyIntegration/PharmacyIntegration.csproj
RUN dotnet restore WebApplication/WebApplication.csproj
RUN dotnet restore IntegrationTests/IntegrationTests.csproj

COPY . .

FROM build AS publish
WORKDIR /app/Backend
ENV PATH $PATH:/root/.dotnet/tools
RUN dotnet tool install -g dotnet-ef --version 3.1.9
RUN dotnet ef migrations add Init

FROM build AS test
LABEL test=true
RUN dotnet test -c Release --results-directory /testresults --logger "trx;LogFileName=test_results.trx" IntegrationTests/IntegrationTests.csproj

